<Page x:Class="Launcher.WPF.PageError"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Launcher.WPF"
      mc:Ignorable="d"
      Title="PageError">
    <StackPanel>
        <Label x:Name="titleLabel" Content="Title" HorizontalAlignment="Center" Foreground="Red"/>
        <TextBlock x:Name="messageTextBlock" Text="Message" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Margin="60, 10, 60, 20"/>
        <Button Content="Ok" HorizontalAlignment="Center" Width="75" Click="ButtonOk_Click"/>
    </StackPanel>
</Page>
