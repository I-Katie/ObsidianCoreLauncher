<Window x:Class="Launcher.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher.WPF"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <!--<Window.Background>
        <ImageBrush ImageSource="bg.jpg"/>
    </Window.Background>-->
    <Grid Width="600" Height="350">
        <Frame x:Name="frame" NavigationUIVisibility="Hidden" Navigated="Frame_Navigated" IsTabStop="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label x:Name="labelName" Content="name" Foreground="Gray" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0" Margin="10,10,0,0"/>
        <Label Content="This launcher is unofficial and unaffiliated with Mojang or Microsoft." Foreground="Gray" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="0" Margin="0,0,10,10"/>
    </Grid>
</Window>
